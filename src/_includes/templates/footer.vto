<footer class="py-4 my-4">
  <ul class="flex flex-wrap justify-center gap-4">
    {{ for entry of search.pages("menu.visible=true", "menu.order") }}
      <li>
        <a
          href="{{ entry.url }}"
          class="text-gray-500 hover:text-gray-600"
        >
          {{ entry.title }}
        </a>
      </li>
    {{ /for }}

    {{ for link of it.menu_links }}
      <li>
        <a
          class="text-gray-500 hover:text-gray-600"
          href="{{ link.href }}"
          {{ if link.target }}target="{{ link.target }}"{{ /if }}
          {{ if link.rel }}rel="{{ link.rel }}"{{ /if }}
        >
          {{ link.text }}
        </a>
      </li>
    {{ /for }}
  </ul>

  <div
    class="flex justify-between flex-wrap pt-4 mt-4 border-t border-gray-300 gap-2"
  >
    <p class="text-sm text-gray-500">© 2024 Pickaria. Tous droits réservés.</p>

    <ul class="flex gap-3 ms-lg-auto">
      {{ for link of it.social_links }}
        <li>
          <a
            href="{{ link.href }}"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="{{ link.icon }}"
              alt="{{ link.name }}"
              loading="lazy"
              class="w-4 h-4"
              width="16"
              height="16"
            />
          </a>
        </li>
      {{ /for }}
    </ul>
  </div>
</footer>
